<!-- Config file for the game -->
<!-- L01: DONE 1: Create configuration file-->
<config>
  <app framerate_cap="60">
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
    <savefile path="savegame.xml"/>
  </app>

  <renderer>
    <vsync value="true"/>
  </renderer>

  <window>
    <resolution width="960" height="540" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <player>
  	<texture>Assets/textures/Main Characters/Virtual Guy/SpriteSheet.png</texture>
  	<movement gravity="1000" jumpForce="350" speed="220" maxJumps="2" initialImpulse="1000" />
    <audio jump="Assets/audio/fx/jump.wav" doubleJump="Assets/audio/fx/double.wav" gameOver="Assets/audio/fx/game over.wav" gameStart="Assets/audio/fx/game start.wav" nuts="Assets/audio/fx/deez_nuts.wav" fruit="Assets/audio/fx/pick_up_fruit.wav" checkpoint="Assets/audio/fx/checkpoint.wav" />
  </player>

  <!-- L03: Added maps folder as config option -->
  <map>
    <folder>Assets/maps/</folder>
  </map>

  <scene>
    <music path="Assets/audio/music/song.ogg"/>
    <texture screen="Assets/title screen/reduced title screen.png"/>
  </scene>

  <parallax>
    <texture tex1="Assets/parallax background/background_0.png" tex2="Assets/parallax background/background_1.png" tex3="Assets/parallax background/background_2.png"/>
  </parallax>

  <ui>
    <ui fontPath="Assets/ui/white.png" teleportMapPath1="Assets/ui/teleport_checkpoint_lvl1.png" teleportMapPath2="Assets/ui/teleport_checkpoint_lvl2.png" livesTexturePath = "Assets/ui/lives.png" teleportArrow="Assets/ui/teleport_arrow.png" teleportCross= "Assets/ui/teleport_cross.png"/>
  </ui>

</config>