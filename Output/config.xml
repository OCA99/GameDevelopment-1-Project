<!-- Config file for the game -->
<!-- L01: DONE 1: Create configuration file-->
<config>
  <app framerate_cap="60">
    <title>Game Development Testbed</title>
    <organization>UPC</organization>
    <savefile path="savegame.xml"/>
  </app>

  <renderer>
    <vsync value="false"/>
  </renderer>

  <window>
    <resolution width="960" height="540" scale="2"/>
    <fullscreen value="false"/>
    <borderless value="false"/>
    <resizable value="false"/>
    <fullscreen_window value="false"/>
  </window>

  <player>
  	<texture>assets/character/sprite_sheet.png</texture>
  	<movement gravity="1000" jumpForce="350" speed="220" maxJumps="2" initialImpulse="1000" />
    <audio jump="assets/audio/fx/jump.wav" doubleJump="assets/audio/fx/double.wav" gameOver="assets/audio/fx/game_over.wav" gameStart="assets/audio/fx/game_start.wav" nuts="assets/audio/fx/deez_nuts.wav" fruit="assets/audio/fx/pick_up_fruit.wav" heart="assets/audio/fx/pick_up_heart.wav" checkpoint="assets/audio/fx/checkpoint.wav" dash="assets/audio/fx/dash.wav" throwKnife="assets/audio/fx/throw_knife.wav" />
  </player>

  <!-- L03: Added maps folder as config option -->
  <map>
    <folder>assets/maps/</folder>
    <mapcomponent endFlag="assets/maps/flag.png"/>
  </map>

  <scene>
    <music path="assets/audio/music/song.ogg"/>
    <texture screen="assets/title_screen/reduced_title_screen.png"/>
  </scene>

  <parallax>
    <texture tex1="assets/parallax_background/background_0.png" tex2="assets/parallax_background/background_1.png" tex3="assets/parallax_background/background_2.png"/>
  </parallax>

  <ui>
    <ui fontPath="assets/ui/white.png" teleportMapPath1="assets/ui/teleport_checkpoint_lvl1.png" teleportMapPath2="assets/ui/teleport_checkpoint_lvl2.png" livesTexturePath = "assets/ui/lives.png" teleportArrow="assets/ui/teleport_arrow.png" teleportCross= "assets/ui/teleport_cross.png"/>
  </ui>

  <entities>
  	<batTexture>assets/enemies/bat/bat.png</batTexture>
  	<pigTexture>assets/enemies/pig/pig.png</pigTexture>
  	<fruitTexture>assets/items/item_spritesheet.png</fruitTexture>
  	<heartTexture>assets/items/heart_anim.png</heartTexture>
  	<knifeTexture>assets/character/knife.png</knifeTexture>
  	<entities enemySpeed="80" pigHealth="2" enemyGravity="1000" enemyJumpForce="350" knifeSpeed="500" />
  </entities>

</config>